<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Video.styles">
    <!--#region StatusBarSeparatorBrush -->
    <LinearGradientBrush x:Key="StatusBarSeparatorBrush" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#BEBEBE" Offset="0.25"/>
        <GradientStop Color="#9A9B9A" Offset="0.5"/>
        <GradientStop Color="#464646" Offset="1"/>
    </LinearGradientBrush>
    <!--#endregion StatusBarSeparatorBrush -->
    <!--#region StatusBarBackgroundBrush -->
    <LinearGradientBrush x:Key="StatusBarBackgroundBrush" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#EDEDED" Offset="0.25"/>
        <GradientStop Color="#BEBEBE" Offset="0.5"/>
        <GradientStop Color="#CACACA" Offset="1"/>
    </LinearGradientBrush>
    <!--#endregion StatusBarBackgroundBrush -->
</ResourceDictionary>